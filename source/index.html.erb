---
pageable: true
per_page: 20
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <article class="type-system-rounded">
    <h1><%= link_to article.title, article %></h1>
    <p class="date"><%= article.date.strftime('%B %e, %Y') %></p>
    <%= article.summary %>
    <hr>
    <p class="author"><%= twitter(article.data.author) %></p> 
  </article>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
