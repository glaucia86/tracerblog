---
pageable: true
per_page: 12
---
<p>
  <h1>Articles tagged '<%= tagname %>'</h1>
</p>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <article class="type-system-rounded">
    <h1><%= link_to article.title, article %></h1>
      <%= article.summary %>
      <span class="author"><%= article.data.author %> </span> - <span class="date"><%= article.date.strftime('%e/%m/%Y') %></span>
      <% article.tags.each do |tag| %>
        <a href="tags/<%= tag.downcase %>.html"> <%= tag %></a>
      <% end %>
  </article>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
